---
// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import Layout from "../layouts/Layout.astro";

// Component Imports:
import Contact from "@components/Contact.astro";
import Footer from "@components/Footer.astro";

// Component variables:
const pageTitle: string = "Ambrose";
const pageDescription: string = "A black and white cat";
const pageNavLinks: NavLink[] = [
  { title: "About", url: "/about", active: false },
  /* { title: "Blog", url: "/blog", active: false }, - Coming soon! */
  /* { title: "Contact", url: "#contact", active: false }, TODO */
  /* { title: "/Uses", url: "/uses", active: false }, - TODO */
  /* { title: "/Now", url: "/now", active: false }, - TODO */
];
const footerNavLinks: NavLink[] = [
  { title: "About", url: "/about", active: false },
  { title: "Accessibility", url: "/accessibility", active: false },
];

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<Layout title={pageTitle} description={pageDescription} navLinks={pageNavLinks}>
  <main class="wrapper">
    <article class="404">
      <div>
        <h1>404 Page Not Found</h1>

        <p>I'm sorry, this page doesn't seem to exist.</p>

        <p>
          Return <strong
            ><a href="/" class="font-heading text-primary">Home</a></strong
          >.
        </p>
      </div>
    </article>
    <div class="contact-section">
      <Contact />
    </div>
  </main>
  <Footer navLinks={footerNavLinks} />
</Layout>

<style>
  article {
    -webkit-align-items: center;
    align-items: center;
    display: flex;
    flex-direction: column;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
  article > div {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-bottom: 1rem;
    max-width: 38rem;
    width: 100%;

    h1 {
      margin-bottom: 1rem;
    }

    img {
      border-radius: 0.63rem;
      height: auto;
      margin: 0 auto 1rem auto;
      width: 100%;
    }
    img:not(:first-of-type) {
      margin: 1rem auto;
    }
  }
  .contact-section {
    display: flex;
    flex-direction: column;
    max-width: 38rem;
    margin: 0 auto;
    padding-bottom: 1rem;
    width: 100%;
  }
</style>
