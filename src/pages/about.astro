---
// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import Layout from "../layouts/Layout.astro";

// Component Imports:
import AboutMe from "@components/AboutMe.astro";
import Contact from "@components/Contact.astro";
import Footer from "@components/Footer.astro";

// Component variables:
const pageTitle: string = "Lucas L Jordan";
const pageDescription: string = "Developer from Melbourne Australia";
const pageNavLinks: NavLink[] = [
  { title: "About", url: "/about", active: true },
  /* { title: "Blog", url: "/blog", active: false }, - Coming soon! */
  /* { title: "Contact", url: "#contact", active: false }, TODO */
  /* { title: "/Uses", url: "/uses", active: false }, - TODO */
  /* { title: "/Now", url: "/now", active: false }, - TODO */
];
const footerNavLinks: NavLink[] = [
  { title: "About", url: "/about", active: true },
  { title: "Accessibility", url: "/accessibility", active: false },
];

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<Layout title={pageTitle} description={pageDescription} navLinks={pageNavLinks}>
  <main class="wrapper">
    <div class="about-section">
      <AboutMe />
    </div>
    <div class="contact-section">
      <Contact />
    </div>
  </main>
  <Footer navLinks={footerNavLinks} />
</Layout>

<style>
  .about-section {
    -webkit-align-items: center;
    align-items: center;
    display: flex;
    flex-direction: column;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
  .contact-section {
    display: flex;
    flex-direction: column;
    max-width: 38rem;
    margin: 0 auto;
    padding-bottom: 1rem;
    width: 100%;
  }
</style>
